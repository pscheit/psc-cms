<?xml version="1.0" encoding="utf-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="bootstrap.php"
>
    <testsuites>
        <testsuite name="Psc - CMS - Testsuite">
          <directory>tests/Psc/</directory>
        </testsuite>
    </testsuites>

    <logging>
      <!--
      <log type="coverage-html" target="../build/coverage" title="tiptoi" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
      -->
    </logging>
    
    <filter>
      <whitelist addUncoveredFilesFromWhitelist="true">
        <directory suffix=".php">lib/Psc/</directory>
        <exclude>
          <directory suffix="Exception.php">lib/Psc/Doctrine</directory>
          <directory>lib/Psc/DB</directory>
          <directory>lib/Psc/SQL</directory>
        </exclude>
      </whitelist>
    </filter>
</phpunit>